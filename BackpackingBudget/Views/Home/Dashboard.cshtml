@model BackpackingBudget.Models.ViewModels.TotalBudgetViewModel

@{
    ViewData["Title"] = "Dashboard";
}



<h2>@Model.Budget.Name</h2>

<h4>@Model.Budget.StartDate.ToLongDateString() - @Model.Budget.EndDateExists().ToLongDateString()</h4>

<div>
    <div id="dashboardRow" class="row">

        <div class="col-xs-8 col-xl-3 col-lg-3 col-md-6 col-sm-6 card-container">
            <div class="e-card card">
                <div class="e-card-content">
                    <h3 class="card-value" id="totalBudget">@Model.Budget.BudgetAmount.ToString("C") </h3>
                    <span class="card-text">Budget</span>
                </div>
            </div>
        </div>
        <div class="col-xs-8 col-xl-3 col-lg-3 col-md-6 col-sm-6 card-container">
            <div class="e-card card">
                <div class="e-card-content">
                    <h3 class="card-value" id="totalExpense">@Model.AmountSpent.ToString("C") </h3>
                    <span class="card-text">Total Spent</span>
                </div>
            </div>
        </div>
        <div class="col-xs-8 col-xl-3 col-lg-3 col-md-6 col-sm-6 card-container">
            <div class="e-card card">
                <div class="e-card-content">
                    <h3 class="card-value" id="balance">@Model.AmountRemaining().ToString("C") </h3>
                    <span class="card-text">Current Balance</span>
                </div>
            </div>
        </div>
        <div class="col-xs-8 col-xl-3 col-lg-3 col-md-6 col-sm-6 card-container">
            <div class="e-card card">
                <div class="e-card-content">
                    <h3 class="card-value" id="average">@Model.ActualPerDayAverage().ToString("C")</h3>
                    <span class="card-text">Actual per day spending</span>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
    Add Expense Items
</button>
<hr />
@*<div>Estimated per Day @Model.EstimatedPerDayAverage() </div>*@


<div>
    <div id="dashboardRow" class="row">

        <div class="col-xs-8 col-xl-6 col-lg-6 col-md-6 col-sm-8  card-container">
            <div class="e-card card">
                <div class="e-card-content">
                    <h3 class="card-value" id="daysLeft">@Model.DaysLeft()  </h3>
                    <span class="card-text">Updated Days Remaining</span>
                </div>
            </div>
        </div>
        <div class="col-xs-8 col-xl-6 col-lg-6 col-md-6 col-sm-8 card-container">
            <div class="e-card card">
                <div class="e-card-content">
                    <h3 class="card-value" id="returnDate">@Model.EstimatedReturnDate()</h3>
                    <span class="card-text">Return date at current spending rate</span>
                </div>
            </div>
        </div>

    </div>
</div>
<hr />

<div class='row'>
    <div class="row card-layout">
        <!-- Basic Card Layout  -->
        @foreach (var bc in Model.CategoryViewModels)
        {
            <div class="col-xs-8 col-xl-6 col-lg-6 col-md-8 col-sm-8 card-container">
                <div class="e-card card">
                    <div class="e-card-content">
                        <h5 class="e-card-header-title">@bc.BudgetCategory.Name Totals</h5>
                        <div class="col-xs-12 col-sm-12 col-lg-6 col-md-6">
                            <div>
                                <a id="anchorbtn" class="e-btn e-primary" asp-controller="BudgetCategories" asp-action="Details" asp-route-id="@bc.BudgetCategory.BudgetCategoryId">@bc.BudgetCategory.Name Expense Details</a>
                            </div>
                        </div>
                    </div>
                    <ul>
                        <li>Original Budget: @bc.BudgetCategory.BudgetPerDay.ToString("C") per day</li>
                        <li>Total Spent on @bc.BudgetCategory.Name: @bc.TotalSpent.ToString("C") </li>
                        @*<li>Total Estimated: @bc.TotalEstimated().ToString("C") </li>*@
                        <li>Daily average so far: @bc.AveragePerDay() </li>
                        <li>Daily average remaining: @bc.AveragePerDayRemaining() </li>
                    </ul>
                </div>
            </div>

        }
    </div>
</div>


@{
    await Html.RenderPartialAsync("~/Views/Expenses/AddExpense.cshtml", Model);
}




